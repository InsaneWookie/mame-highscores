extends layout

block content

	if game === null
		div No game found
	else
		div(class="titleImg" style="position:absolute; margin-left:-280px; margin-top:30px;")
			img(src="http://sifty.tk/hiscores/titles/#{game.name}.png")
		div
			h3 Scores for game #{game.fullName} (#{game.name})
			include _scores
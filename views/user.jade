extends layout

block content	

	h1 Games with scores for #{user.userName} 
	h3 Email: #{user.email}
	h3 Aliases: #{user.aliases}

	each game in games	
		h1 #{game.fullName} (#{game.name})

		if game.scores != undefined
			table
				tr
					td Name
					td Score
					each score in game.scores
						tr
							td= score.name
							td= score.score